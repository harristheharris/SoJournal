<div class="grid align-forms m-5 align-forms">
    <div>
        <h2>Login</h2>
        <form class="login-form field ">

            <div class="login-inner-div field">
                <label for="name-login label">username:</label>
                <div class="control">
                    <input class="input is-small" type="text" id="username-login" />
                </div>
            </div>
            
            <div class="login-inner-div field">
                <label for="password-login">password:</label>
                <div class="control">
                    <input class="input is-small" type="password" id="password-login" />
                </div>
            </div>
            <div>
                <button class="button is-dark " type="submit">login</button>
            </div>
        </form>
    </div>
    <div>
        <h2>Signup</h2>
        <form class="signup-form login-form field">
            <div class="login-inner-div field">
                <label for="name-signup">username:</label>
                <div class="control">
                    <input class="input is-small" type="text" id="username-signup" />
                </div>
            </div>
            <div class="login-inner-div field">
                <label for="email-signup">email:</label>
                <div class="control">
                    <input class="input is-small" type="text" id="email-signup" />
                </div>
            </div>
            <div class="login-inner-div field">
                <label for="password-signup">password:</label>
                <div class="control">
                    <input class="input is-small" type="password" id="password-signup" />
                </div>
            </div>
            <div>
                <button class="button is-dark" type="submit">signup</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>